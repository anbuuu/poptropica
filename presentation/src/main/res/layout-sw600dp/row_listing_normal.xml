<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_articles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    app:cardCornerRadius="@dimen/cv_corner_radius"
    app:cardElevation="@dimen/cv_cardElevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/cv_content_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/listing_first_retina_thumbnail"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:paddingLeft="@dimen/padding_start"
                android:paddingStart="@dimen/padding_start"
                android:paddingRight="@dimen/padding_end"
                android:paddingEnd="4dp"
                android:paddingTop="@dimen/paddingTop"

                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/newsHeadinglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >


            <TextView
                android:id="@+id/listing_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top|start"
                android:paddingLeft="@dimen/tv_padding_start"
                android:textSize="8sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/total_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_start"
                android:paddingRight="@dimen/padding_end"
                android:paddingTop="8dp"

                android:textSize="8sp"
                />


            <TextView
                android:id="@+id/listing_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/tv_author_padding_end"
                android:paddingTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="8sp"
                />

            <ImageView
                android:id="@+id/agency_logo"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:paddingLeft="@dimen/padding_start"
                android:paddingRight="@dimen/padding_end"
                android:baselineAlignBottom="true"
                android:paddingBottom="4dp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
