<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/cv_corner_radius"
    app:cardElevation="@dimen/cv_cardElevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/cv_content_padding">



        <LinearLayout
            android:id="@+id/newsHeadinglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/listing_first_retina_thumbnail"
                style="@style/AppTheme.PropertyThumbnail_Normal"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
            <TextView
                android:id="@+id/listing_price"
                style="@style/AppTheme.PricingStyle"
                android:text="$2,625,000"
                />


                <TextView
                    android:id="@+id/total_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:paddingTop="20dp"
                    android:text="3 Bed 2 Bath 2 Car"
                    android:textSize="@dimen/tv_description_text_size"
                    />
                <!-- Todo move all this to Styles -->
                <TextView
                    android:id="@+id/listing_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:paddingTop="20dp"
                    android:text="181 Toongabbie Road, Toongabbie"
                    android:textSize="@dimen/tv_description_text_size"
                    android:paddingBottom="20dp"

                    />


                <!-- agency_logo -->
                <!-- TODO fix the width and height for agency logo -->
                <ImageView
                    android:id="@+id/agency_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:src="@mipmap/logo_17948"

                    />

            </LinearLayout>


        </LinearLayout>



</android.support.v7.widget.CardView>
