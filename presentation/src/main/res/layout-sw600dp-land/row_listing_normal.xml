<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/cv_corner_radius"
    app:cardElevation="@dimen/cv_cardElevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/cv_content_padding">



        <LinearLayout
            android:id="@+id/newsHeadinglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/propertyImageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/listing_first_retina_thumbnail"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:paddingLeft="@dimen/padding_start"
                android:paddingRight="@dimen/padding_end"
                android:paddingTop="@dimen/paddingTop"

                />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/propetyInfolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/listing_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:paddingLeft="@dimen/tv_padding_start"
                android:textSize="16sp"
                android:textStyle="bold"
                />


                <TextView
                    android:id="@+id/total_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:paddingTop="8dp"

                    android:textSize="16sp"
                    />
                <!-- Todo move all this to Styles -->
                <TextView
                    android:id="@+id/listing_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:textSize="16sp"
                    />


                <!-- agency_logo -->
                <!-- TODO fix the width and height for agency logo -->
                <ImageView
                    android:id="@+id/agency_logo"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:paddingTop="@dimen/paddingTop"
                    android:baselineAlignBottom="true"

                    />

            </LinearLayout>


        </LinearLayout>



</android.support.v7.widget.CardView>
