<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.PricingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_description_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pricingColor</item>
        <item name="android:paddingLeft">@dimen/padding_start</item>
        <item name="android:paddingRight">@dimen/padding_end</item>
        <item name="android:paddingTop">20dp</item>


        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="AppTheme.TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CategoryHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/categoryHeaderPadding</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="AppTheme.PropertyThumbnail_Normal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:paddingLeft">@dimen/padding_start</item>
        <item name="android:paddingRight">@dimen/padding_end</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>


    </style>

    <style name="AppTheme.PropertyThumbnail_Elite">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">420dp</item>
        <item name="android:paddingLeft">@dimen/padding_start</item>
        <item name="android:paddingRight">@dimen/padding_end</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>


    </style>


</resources>
