<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/cv_corner_radius"
    app:cardElevation="@dimen/cv_cardElevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/cv_content_padding">



        <LinearLayout
            android:id="@+id/newsHeadinglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/listing_first_retina_thumbnail"
                android:layout_width="@dimen/iv_related_image_width"
                android:layout_height="@dimen/iv_related_image_height"
                android:paddingLeft="@dimen/padding_start"
                android:paddingRight="@dimen/padding_end"
                android:paddingTop="@dimen/paddingTop"
                android:src="@mipmap/ic_launcher"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/listing_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_start"
                android:paddingRight="@dimen/padding_end"
                android:paddingTop="@dimen/paddingTop"
                android:text="Auction"
                android:textSize="@dimen/tv_description_text_size"
                />


                <TextView
                    android:id="@+id/total_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:paddingTop="@dimen/paddingTop"
                    android:text="Auction"
                    android:textSize="@dimen/tv_description_text_size"
                    />
                <!-- Todo move all this to Styles -->
                <TextView
                    android:id="@+id/listing_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:paddingTop="@dimen/paddingTop"
                    android:text="Auction"
                    android:textSize="@dimen/tv_description_text_size"
                    />


                <!-- agency_logo -->
                <!-- TODO fix the width and height for agency logo -->
                <ImageView
                    android:id="@+id/agency_logo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/padding_start"
                    android:paddingRight="@dimen/padding_end"
                    android:paddingTop="@dimen/paddingTop"

                    />

            </LinearLayout>


        </LinearLayout>



</android.support.v7.widget.CardView>
